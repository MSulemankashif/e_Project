<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Excellon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Excellon.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container mx-auto px-6 flex justify-between items-center">
                <div class="flex items-center">
                    <a href="#" class="text-2xl font-['Pacifico'] text-primary">Excell-On</a>
                </div>
                <div class="hidden md:flex items-center space-x-8">
                    <a asp-controller="Home" asp-action="Index" data-readdy="true" class="text-gray-800 hover:text-primary font-medium">Home</a>
                    <a asp-controller="Home" asp-action="Services" data-readdy="true" class="text-gray-800 hover:text-primary font-medium">Services</a>
                    <a asp-controller="Home" asp-action="Clients" data-readdy="true" class="text-gray-800 hover:text-primary font-medium">Clients</a>
                    <a asp-controller="Home" asp-action="About" class="text-primary font-medium">About</a>
                    <a asp-controller="Home" asp-action="Contact" class="text-gray-800 hover:text-primary font-medium">Contact</a>
                </div>
                <div class="hidden md:flex items-center space-x-4">
                    <a asp-controller="Login" asp-action="Signin" data-readdy="true" class="px-4 py-2 text-primary border border-primary !rounded-button hover:bg-primary hover:text-white transition duration-300 whitespace-nowrap">Log In</a>
                    <a href="#" class="px-4 py-2 bg-primary text-white !rounded-button hover:bg-primary/90 transition duration-300 whitespace-nowrap">Register</a>
                </div>
                <div class="md:hidden w-10 h-10 flex items-center justify-center">
                    <i class="ri-menu-line ri-lg text-gray-800"></i>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Excellon - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
